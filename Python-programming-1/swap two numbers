number1 = input('Enter First Number: ')
number2 = input('Enter Second Number: ')

print("Value of num1 before swapping: ", number1)
print("Value of num2 before swapping: ", number2)

x=int(input("Enter 1 for swapping using temporary variable and 0 for without temp variable"))
if x==1:
  # swapping two numbers using temporary variable
  temp = number1
  number1 = number2
  number2 = temp
elif x==0:
  # swapping two numbers ithout using temporary variable
  number1,number2=number2,number1
else:
  print("Invalid input")
print("Value of num1 after swapping: ", number1)
print("Value of num2 after swapping: ", number2)
